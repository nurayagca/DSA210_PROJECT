# 01_data_loading_and_cleaning.ipynb

import os
import pandas as pd
import numpy as np
import requests
from io import BytesIO
from zipfile import ZipFile

# -----------------------------
# Folders
# -----------------------------
os.makedirs("../data/raw", exist_ok=True)
os.makedirs("../data/processed", exist_ok=True)

# -----------------------------
# Download OpenFoodFacts CSV (compressed)
# -----------------------------
url = "https://static.openfoodfacts.org/data/en.openfoodfacts.org.products.csv.gz"
raw_path = "../data/raw/openfoodfacts_products.csv.gz"

if not os.path.exists(raw_path):
    print("Downloading OpenFoodFacts dataset...")
    r = requests.get(url)
    with open(raw_path, "wb") as f:
        f.write(r.content)
else:
    print("Dataset already downloaded.")

# -----------------------------
# Load CSV (limit columns to keep it fast)
# -----------------------------
use_cols = [
    "code",
    "product_name",
    "brands",
    "countries_tags",
    "categories_tags",
    "labels_tags",
    "energy-kcal_100g",
    "sugars_100g",
    "fat_100g",
    "proteins_100g",
    "fiber_100g",
    "salt_100g"
]

df = pd.read_csv(raw_path, sep="\t", usecols=lambda c: c in use_cols, low_memory=False)

print("Raw shape:", df.shape)

# -----------------------------
# Basic cleaning
# -----------------------------
df = df.dropna(subset=["product_name"])
df = df.drop_duplicates(subset=["code"])

# Convert nutrition columns to numeric
nutr_cols = [
    "energy-kcal_100g",
    "sugars_100g",
    "fat_100g",
    "proteins_100g",
    "fiber_100g",
    "salt_100g"
]
for c in nutr_cols:
    df[c] = pd.to_numeric(df[c], errors="coerce")

# Keep products with at least calories + protein
df = df.dropna(subset=["energy-kcal_100g", "proteins_100g"])

print("After cleaning:", df.shape)

# -----------------------------
# Diet label detection (KEY FEATURE)
# -----------------------------
diet_keywords = [
    "diet", "light", "fit", "high-protein", "protein",
    "low-sugar", "no-added-sugar", "sugar-free", "low-fat"
]

def has_diet_label(row):
    text = " ".join([
        str(row.get("product_name", "")),
        str(row.get("labels_tags", "")),
        str(row.get("categories_tags", ""))
    ]).lower()
    return any(k in text for k in diet_keywords)

df["is_diet_labeled"] = df.apply(has_diet_label, axis=1).astype(int)

# -----------------------------
# Feature engineering (ENRICHMENT)
# -----------------------------
df["protein_per_100kcal"] = df["proteins_100g"] / (df["energy-kcal_100g"] / 100)
df["sugar_to_fiber"] = df["sugars_100g"] / (df["fiber_100g"] + 0.1)
df["calorie_density"] = df["energy-kcal_100g"]

# Remove extreme outliers
df = df[df["energy-kcal_100g"] < 900]
df = df[df["proteins_100g"] < 80]

print("Final shape:", df.shape)

# -----------------------------
# Save processed dataset
# -----------------------------
processed_path = "../data/processed/food_nutrition_cleaned.csv"
df.to_csv(processed_path, index=False)

print("Saved:", processed_path)
df.head()

